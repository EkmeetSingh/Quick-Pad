<Application
    x:Class="QuickPad.UI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:commands="using:QuickPad.Mvvm.Commands"
    xmlns:converters="using:QuickPad.UI.Converters"
    >

    <Application.Resources>
        <ResourceDictionary >
            <ResourceDictionary.MergedDictionaries >
                <ResourceDictionary Source="/ResourceDictionaries/RichEditBox.xaml"/>
                <ResourceDictionary Source="/ResourceDictionaries/TextBox.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="TextBlock" x:Key="WrappedText">
                <Setter Property="Margin" Value="0,8,0,4" />
                <Setter Property="TextWrapping" Value="Wrap" />
                <Setter Property="FontFamily" Value="Segoe UI" />
            </Style>
            <FontFamily x:Key="RegExIcon">/Assets/Font/codicon.ttf#codicon</FontFamily>
            <converters:Converter x:Key="Converter" />
        </ResourceDictionary>
    </Application.Resources>
    
</Application>
